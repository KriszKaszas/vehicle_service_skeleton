{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build workspace",
            "command": "C:/Compilers/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-Werror",
                //"-D ",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
